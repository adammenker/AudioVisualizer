<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="audioviz.PlayerController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Open" />
            </items>
          </Menu>
          <Menu fx:id="visualizersMenu" mnemonicParsing="false" text="Visualizers" />
            <Menu fx:id="bandsMenu" mnemonicParsing="false" text="Bands" />
        </menus>
      </MenuBar>
      <AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #1D1C2C;" styleClass="mainFxmlClass">
          <stylesheets>
              <URL value="@player.css" />
          </stylesheets>
         <children>
            <Button fx:id="playPause" layoutX="93.0" layoutY="22.0" mnemonicParsing="false" onAction="#handlePlayPause" prefHeight="27.0" prefWidth="65.0" text="Play" />
            <Text fx:id="lengthText" layoutX="126.0" layoutY="116.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-text-fill: red;" wrappingWidth="65.0" />
            <Label layoutX="61.0" layoutY="103.0" style="-fx-text-fill: #E6E5F8;" text="Length:" />
            <Label layoutX="328.0" layoutY="103.0" style="-fx-text-fill: #E6E5F8;" text="Time:" />
            <Text fx:id="currentText" layoutX="376.0" layoutY="116.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-text-fill: red;" wrappingWidth="65.0" />
            <AnchorPane fx:id="vizPane" layoutX="15.0" layoutY="149.0" prefHeight="352.0" prefWidth="771.0" />
            <Text fx:id="errorText" fill="RED" layoutX="25.0" layoutY="592.0" strokeType="OUTSIDE" strokeWidth="0.0" />
            <MediaView fx:id="mediaView" fitHeight="200.0" fitWidth="200.0" layoutX="25.0" layoutY="203.0" style="-fx-background-color: #333444;" />
            <Text fx:id="filePathText" layoutX="186.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="397.0" />
            <Text fx:id="visualizerNameText" layoutX="340.0" layoutY="559.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Text>
            <Label layoutX="602.0" layoutY="29.0" style="-fx-text-fill: #E6E5F8;" text="Bands:" />
            <Text fx:id="bandsText" layoutX="657.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-text-fill: red;" />
            <Button layoutX="31.0" layoutY="22.0" mnemonicParsing="false" onAction="#handleOpen" text="Open" />
            <Slider fx:id="volumeSlider" layoutX="589.0" layoutY="73.0" onMouseReleased="#handleVolumeSliderMouseReleased" />
            <Slider fx:id="timeSlider" layoutX="296.0" layoutY="69.0" onMousePressed="#handleSliderMousePressed" onMouseReleased="#handleSliderMouseReleased" prefHeight="25.0" prefWidth="242.0" />
            <Text fx:id="currentVol" layoutX="669.0" layoutY="116.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-text-fill: red;" wrappingWidth="65.0" />
            <Label layoutX="621.0" layoutY="103.0" style="-fx-text-fill: #E6E5F8;" text="Vol:" />
            <ProgressBar fx:id="lengthBar" layoutX="31.0" layoutY="72.0" prefHeight="20.0" prefWidth="219.0" progress="0.0" />
         </children>
      </AnchorPane>
   </children>
</VBox>
